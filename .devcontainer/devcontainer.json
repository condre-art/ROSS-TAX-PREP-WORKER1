// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-24-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/copilot-cli:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/dhoeric/features/act:1": {},
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {},
		"ghcr.io/ait-assistive-autonomous-systems/devcontainer_features/add-groups:0": {},
		"ghcr.io/devcontainers-extra/features/act-asdf:2": {},
		"ghcr.io/devcontainers-extra/features/apt-packages:1": {},
		"ghcr.io/devcontainers-extra/features/asciidoctorj-sdkman:2": {},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {},
		"ghcr.io/jajera/features/ag:1": {},
		"ghcr.io/daniellindemann/dev-container-features/dotnet-usersecrets-persistence:0": {},
		"ghcr.io/devcontainer-config/features/dot-config:3": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mcrespo.veriv"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
		// Use 'forwardPorts' to make a list of ports inside the container available locally.
		"forwardPorts": [8787, 5173, 3000, 4173]

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
